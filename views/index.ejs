<h2>User List</h2>

<% if(message){ %>
  <p><%= message %></p>
<% } %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(function(user){ %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td>
          <a href="/api/user/edit/<%= user._id %>">Edit</a>
          <form method="POST" action="/api/user/delete/<%= user._id %>?_method=DELETE" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
